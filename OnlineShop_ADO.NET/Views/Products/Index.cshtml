@model List<OnlineShop.Models.ProductModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a href="/products/create">Create</a>
<br />



<table class="table">

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="width:100%;height:250px;">
                <td>
                    <p>@Html.DisplayFor(modelItem => item.Id)</p>
                </td>
                <td>
                    <img src="@item.ProductPhotoURL" alt="Alternate Text" style="width:200px;height:200px;" />
                </td>

                <td>
                    <p style="padding-top:20px;"><span style="color:black; font-weight:bold">@Html.DisplayNameFor(model => model[0].ProductName):</span> @Html.DisplayFor(modelItem => item.ProductName)</p>
                    <br />
                    <p><span style="color:black; font-weight:bold">@Html.DisplayNameFor(model => model[0].ProductPrice):</span> @Html.DisplayFor(modelItem => item.ProductPrice) $</p>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>

